*
  margin 0

body
  overflow hidden
  width 100vw
  height 100vh
  display flex
  align-items center
  justify-content center
  background-color #c2acb5

.screen 
  position relative
  overflow hidden
  display flex
  &:hover 
    & .panel 
      transform translateX(0);

.panel 
  position absolute  
  width 100%
  max-width 320px
  transform translateX(100%)
  height 100%
  background-color red
  right 0
  animation 3s linear