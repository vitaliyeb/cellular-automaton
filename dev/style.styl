*
  margin 0

body
  overflow hidden
  width 100vw
  height 100vh
  display flex
  align-items center
  justify-content center
  background-color #c2acb5

.screen
  --panelWidth clamp(10px, 100%, 320px)
  position relative
  overflow hidden
  display flex
  //&:hover
  //  & .panel
  //    right 0

.panel 
  position absolute
  width var(--panelWidth)
  //transform translateX(100%)
  transition: right .5s linear
  height 100%
  right calc(-1 * var(--panelWidth))
  background-color #847d89cf
  box-sizing border-box
  padding 10px
  &__buttons
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-column-gap 10px
    justify-items center
    & > p
      background-color #87afc7
      line-height 19px
      cursor pointer
      border 1px solid #0000005e
      padding 5px 12px
  &_active 
    right 0
    & ^[-1]__open
      transform translate(-50%, -50%) scaleX(1)
  &__open
    left -10px
    width 26px
    position relative
    height 26px
    border-radius 26px
    background-color #f7f7f7
    border 2px solid #858181
    box-sizing border-box
    display inline-block
    top 50%
    cursor pointer
    transform translate(-50%, -50%) scaleX(-1)
    &:before
    &:after
      content ''
      position absolute
      width 10px
      height 2px
      background-color black
      left 7px
    &:before
      top 7px
      transform rotate(45deg)
    &:after
      bottom 7px
      transform rotate(-45deg)

